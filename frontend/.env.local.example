# Local API Configuration for Self-Hosted Mode
# Copy this to .env.local for local development

# Backend API URL
VITE_API_URL=http://localhost:3001

# Enable local API mode (disables Firebase)
VITE_USE_LOCAL_API=true

# Firebase config (not needed for self-hosted, but keeps build happy)
VITE_FIREBASE_API_KEY=not-used
VITE_FIREBASE_AUTH_DOMAIN=not-used.firebaseapp.com
VITE_FIREBASE_DATABASE_URL=https://not-used.firebaseio.com
VITE_FIREBASE_PROJECT_ID=not-used
VITE_FIREBASE_STORAGE_BUCKET=not-used.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=000000000
VITE_FIREBASE_APP_ID=1:000000000:web:not-used
VITE_FIREBASE_MEASUREMENT_ID=G-NOTUSED
